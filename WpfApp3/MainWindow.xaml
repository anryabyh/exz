<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
       Title="Login" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Please enter your credentials:" FontWeight="Bold" FontSize="16" Margin="0 0 0 20"/>
            <TextBlock Text="exampleText" x:Name="exampleText" Width="100" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Username:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="UsernameTextBox" Width="200" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Password:" Width="100" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox" Width="200" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="Login" Width="80" Height="30" Margin="0 0 0 20" Click="LoginButton_Click"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red"/>
        </StackPanel>

    </Grid>
</Window>
